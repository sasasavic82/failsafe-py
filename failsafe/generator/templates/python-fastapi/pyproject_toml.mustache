[build-system]
requires = ["hatchling>=1.25.0"]
build-backend = "hatchling.build"

[project]
name = "{{packageName}}"
version = "0.0.1"
description = "Service generated from OpenAPI spec using Failsafe Generator v1"
readme = "README.md"
authors = [
    { name = "Sasa Savic", email = "sasa.savic@team.telstra.com" }
]

classifiers = [
    "Development Status :: 4 - Beta",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
    "Programming Language :: Python :: 3.13",
]

packages = [
    { include = "src" }
]

requires-python = ">=3.12,<4.0"

dependencies = [
    # Core framework
    "fastapi ~=0.120.2",
    "httpx ~=0.27.2",
    "pydantic ~=2.12.3",
    "pydantic-settings ~=2.6.1",
    "uvicorn ~=0.32.1",

    # Failsafe (resiliency + opentelemetry)
    "failsafe[opentelemetry] ~=0.0.1",

    # Retry helpers
    "retry ~=0.9.2",

    # OTEL Stack
    "opentelemetry-api>=1.37.0,<2",
    "opentelemetry-sdk>=1.37.0,<2",
    "opentelemetry-exporter-otlp-proto-http>=1.37.0,<2",
    "opentelemetry-instrumentation-fastapi>=0.49b0",
    "opentelemetry-instrumentation-asgi>=0.49b0",
]

[project.optional-dependencies]
dev = [
    "pytest>=8.2",
    "pytest-cov>=5.0",
    "ruff>=0.6",
    "mypy>=1.11",
]

[project.scripts]
inventory = "{{packageName}}.main:app"

[tool.hatch.build.targets.wheel]
packages = ["src"]

[tool.hatch.build.targets.sdist]
include = ["src/**", "README.md", "LICENSE", ".config/**"]

[tool.uv.sources]
failsafe = { git = "https://github.com/sasasavic82/failsafe-py.git", rev = "main" }

# failsafe = { git = "https://gitlab.tools.telstra.com/telstra/incubation/ase/failsafe/failsafe-py.git", rev = "main" }
# failsafe = { path = "../../failsafe", editable = true }

[tool.ruff]
line-length = 100
target-version = ["py314"]

[tool.mypy]
python_version = "3.14"
strict = true
