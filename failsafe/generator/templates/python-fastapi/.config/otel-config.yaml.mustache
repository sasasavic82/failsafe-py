receivers:
  otlp:
    protocols:
      http:
        endpoint: {{packageName}}-otel-collector:4318

processors:
  batch:
    timeout: 10s

exporters:
  prometheus:
    endpoint: "{{packageName}}-otel-collector:8889"
    namespace: "failsafe"
  
  debug:
    verbosity: detailed
    sampling_initial: 5
    sampling_thereafter: 200

service:
  pipelines:
    metrics:
      receivers: [otlp]
      processors: [batch]
      exporters: [prometheus, debug]
